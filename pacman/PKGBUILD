# Maintainer: Tad D <tad@spotco.us>
pkgname=extirpater
pkgver=v2.4
pkgrel=1
pkgdesc="A multiplatform Java based free space eraser"
arch=('any')
url="https://github.com/SpotComms/Extirpater"
license=('MIT')
depends=('java-runtime>=8')
source=($url/releases/download/$pkgver/$pkgname.jar $pkgname.desktop $pkgname-root.desktop $pkgname.png)
md5sums=('f08980cd2637cfec10aaf42dc1a54ee4' '2b812f9af3ce39b1dd37447b2bb4b0ca' '2a985598f3ad9c0e21318298702f7d0d' 'b76e2885571d5ac4a035421bdeaaecad')

build() {
  /bin/true
}

package() {
  cd "$srcdir"
  install -Dm644 $pkgname.jar "$pkgdir/usr/share/java/$pkgname/$pkgname.jar"
  install -Dm644 $pkgname.desktop "$pkgdir/usr/share/applications/$pkgname.desktop"
  install -Dm644 $pkgname-root.desktop "$pkgdir/usr/share/applications/$pkgname-root.desktop"
  install -Dm644 $pkgname.png "$pkgdir/usr/share/pixmaps/$pkgname.png"
}
